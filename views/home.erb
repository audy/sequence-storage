<% if @user %>


  <div class="row-fluid">
    <div class="span12">
      <div class="page-header">
        <h1>Statistics</h1>
      </div>
      Total Bucket Size: <%= pretty_size @stats[:total_file_size] %>
    </div>
  </div>

  <div class="row-fluid">
    <div class="span12">
      <div class="page-header">
        <h1>Latest Updates</h1>
      </div>
      <%= erb :experiments_list %>
    </div>
  </div>
<% else %>
  <div class="row-fluid">
    <div class="hero-unit">
      <h1>Sequences</h1>
      <p>This site is meant to hold our high-throughput sequence data in a manner that is easy to use and secure</p>
      <hr/>
      <div class="row-fluid">
        <div class="span8">
          <a href="/session/new" class="btn-primary btn-large">Login</a>
        </div>
      </div>
    </div>
  </div>
<% end %>