<div class="page-header">
  <h1>Experiments</h1>
</div>

<div class="row">
  <div class="span16">
    <table class="bordered-table zebra-striped">
      <thead>
        <tr>
          <th>
            ID
          </td>
          <th>
            Name
          </th>
          <th>
            Description
          </th>
        </tr>
      </thead>
      <tbody>
        <% @experiments.each do |experiment| %>
          <tr>
            <td>
              <%= experiment.id  %>
            </td>
            <td>
              <%= link_tag(:to => "/experiment/#{experiment.id}", :name => experiment.name) %> 
            </td>
            <td>
              <%= experiment.description.first 300 rescue 'n/a' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    
  </div>
</div>

<div class="row">
  <div class="span16">
    <div class="actions">
      <%= link_tag to: '/experiment/new', name: 'Create Experiment', class: 'btn' %>
    </div>
  </div>
</div>
