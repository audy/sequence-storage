<% if !@experiment.nil? %>
  <div class="page-header">
    <h1><%= @experiment.name %></h1>
  </div>
  <p>Created: <%= pretty_time @experiment.created_at %></p>
  <% update_time = @experiment.update_at %>
  <% if !update_time.nil? %>
    <p>Updated Last: <%= pretty_time @experiment.update_at%></p>
  <% end %>
  <div class="row">
    <div class="span16">
  
      <% if @experiment.users.length == 0 %>
        <p>This experiment is an orphan!</p>
      <% else %>
        <h2>Owners</h2>
        <ul class="undecorated">
          <% @experiment.users.each do |user| %>
            <li><a href="/user/<%= user.id %>"><%= user.name %></a></li>
            <% user.inspect %>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  
  <div class="row">
    <div class="span16">
      <h2>Description</h2>
      <blockquote>
        <%= @experiment.description || 'no description' %>
      </blockquote>
    </div>
  </div>

  <div class="row">
    <div class="span16">
  
      <% if @experiment.datasets.length == 0 %>
        <p>No files!</p>
      <% else %>
        <h2>Files</h2>
        <ul class="undecorated">
          <% @experiment.datasets.each do |file| %>
            <li><a href="/file/<%= file.id %>"><%= file.name %> - <%= file.created_at%> - <%= file.user.name %></a></li>
          <% end %>
        </ul>
      <% end %>
    </div>
  </div>
  <% if !@experiment.users.first(:id => @user.id).nil? %>
    <div class="actions">
      <% if session[:user_id] %>
        <%= link_tag :to => "/experiment/#{@experiment.id}/edit", :name => 'Edit', :class => 'btn' %>
        <%= link_tag :to => "/experiment/#{@experiment.id}/add_owner", :name => 'Add Owner', :class => 'btn primary' %>
        <%= link_tag :to => "/experiment/#{@experiment.id}/add_file", :name => 'Add File', :class => 'btn primary' %>
        <%= link_tag :to => "/download/experiment/#{@experiment.id}", :name => 'Download Experiment', :class => 'btn primary' %>
 	  <% end %>
  </div>
  <% end %>

<% else %>
  <p>no such experiment <%= params[:id] %></p>
<% end %>
