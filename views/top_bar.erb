<% path = request.path_info.split('/')[1] %>

<div class="topbar">
  <div class="fill">
    <div class="container">
      
      <a href="/" class="brand">
        Sequences
      </a>

      <% if @user %>
      
      <ul class="nav">
        <li class="<%= 'active' if path =~ /^experiment/ %>"><a href="/experiments">Experiments</a></li>
        <li class="<%= 'active' if path =~ /^user/ %>"><a href="/users">Users</a></li>
      </ul>
      
      <% end %>
      
      <ul class="nav secondary-nav">
        <% if !@user %>
          <li class="<%= 'active' if path =~ /^session/%>"><a href="/session/new">Login</a></li>
        <% else %>
          <li><a href="/user/<%= @user.id %>"><%= @user.name %></a></li>
          <li><a href="/session/destroy">Logout</a></li>
        <% end %>
      </ul>
        
    </div>
  </div>
</div>