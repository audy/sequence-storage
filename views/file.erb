<div class="page-header">
  <h1><%= @file.name %></h1>
</div>

<div class="row-fluid">
  <div class="span12">
    <p>Created: <%= pretty_time @file.created_at %> by <%= @file.user %></p>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <p>File size: <%= @file.size %></p>
  </div>
</div>

<div class="row-fluid">
  <div class="span12">
    <div class="actions">
      <%= link_tag :to => "/file/#{@file.id}/download", :name => 'Download', :class => 'btn' %>
    </div>
  </div>
</div>